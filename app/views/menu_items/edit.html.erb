<div class="menuItemEditHeader"><h1><%= @menu_item.restaurant.cname %> Menu </h1></div>

<div class="menuItemEditCategory"><h3>Appetizers</h3>
<% @menu_item.items.appetizers.each do |item| %>
	<p><%= item.item %> $<%= item.price %></p>
	<p><%= item.description %></p>
	<p>Price During Discount Time: $<%= item.starting_range %>-<%= item.ending_range %></p>
	<%= link_to 'Delete Item', item, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %></div>

