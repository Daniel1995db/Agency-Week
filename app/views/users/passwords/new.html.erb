<center><h2 class="whatever">Forgot your password?</h2></center>

<div id="forgetpwform">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>



    <center><%= f.email_field :email, autofocus: true, placeholder: "Enter your Email" %> </center>

  <div class="actions">
    <center><%= f.submit "Reset Password", class: "pwreset" %></center>
  </div>
<% end %>

<center><%= render "users/shared/links" %></center>
</div>
