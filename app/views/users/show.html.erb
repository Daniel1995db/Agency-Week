<p id="notice"><%= notice %></p>

<style>
@import url('https://fonts.googleapis.com/css?family=Sarala');
</style>
<style>
@import url('https://fonts.googleapis.com/css?family=Roboto|Sarala');
</style>
<style>
@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro');
</style>

<center><h2>User Information</h2></center>
<div id="UserInfo">

<p><%= image_tag(@user.image) if @user.image? %></p>
<p>  <strong>First Name:</strong>
  <%= @user.fname %>
</p>

<p>
  <strong>Last Name:</strong>
  <%= @user.lname %>
</p>

<p>
  <strong>Status:</strong>
  <%= @user.status %>
</p>

<div id="editprofilelink">
<center><%= link_to 'Edit Info', edit_user_path(@user) %></center>
</div>
</div>
<div id="UserFavs">
<p>
  <h3><center>Favorite Restaurants</center></h3>
  <% @user.favorite_restaurants.each do |fr| %>
  	<p><%= fr.restaurant.cname %></p>
  <% end %>
</p>
</div>
<br>

<div class="socialmedia">
<%= link_to(image_tag("socialmedia/fb.svg"), root_path, class: "styleimg") %>
<%= link_to(image_tag("socialmedia/twitter.svg"), root_path, class: "styleimg") %>
<%= link_to(image_tag("socialmedia/insta.svg"), root_path, class: "styleimg") %>
</div>
