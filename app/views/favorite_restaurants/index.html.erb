<p id="notice"><%= notice %></p>

<h1>Favorite Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_restaurants.each do |favorite_restaurant| %>
      <tr>
        <td><%= favorite_restaurant.user %></td>
        <td><%= favorite_restaurant.restaurant %></td>
        <td><%= link_to 'Show', favorite_restaurant %></td>
        <td><%= link_to 'Edit', edit_favorite_restaurant_path(favorite_restaurant) %></td>
        <td><%= link_to 'Destroy', favorite_restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

